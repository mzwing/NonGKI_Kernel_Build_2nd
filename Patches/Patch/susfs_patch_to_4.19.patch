+void susfs_run_sus_path_loop(uid_t uid) {
+	struct st_susfs_sus_path_list *cursor = NULL;
+	struct path path;
+	struct inode *inode;
+
+	list_for_each_entry(cursor, &LH_SUS_PATH_LOOP, list) {
